@model ProjectTW.Web.Models.GlobalData

<section id="main-content" class=" ">
     <section class="wrapper main-wrapper row" style=''>

          <div class='col-12'>
               <div class="page-title">

                    <div class="float-left">
                         <!-- PAGE HEADING TAG - START --><h1 class="title">Book Appointment</h1><!-- PAGE HEADING TAG - END -->
                    </div>

                    <div class="float-right d-none">
                         <ol class="breadcrumb">
                              <li>
                                   <a href="index.html"><i class="fa fa-home"></i>Home</a>
                              </li>
                              <li>
                                   <a href="hos-book-appointment.html">Appointment</a>
                              </li>
                              <li class="active">
                                   <strong>Book Appointment</strong>
                              </li>
                         </ol>
                    </div>

               </div>
          </div>
          <div class="clearfix"></div>
          <!-- MAIN CONTENT AREA STARTS -->

          <div class="col-12">
               <section class="box ">
                    <header class="panel_header">
                         <h2 class="title float-left">Basic Info</h2>
                         <div class="actions panel_actions float-right">
                              <a class="box_toggle fa fa-chevron-down"></a>
                              <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                              <a class="box_close fa fa-times"></a>
                         </div>
                    </header>
                    <div class="content-body">
                         <div class="row">
                              <form action="#" method="post">
                                   <div class="col-12 col-md-9 col-lg-8">
                                        @using (Html.BeginForm("Index", "BookAppointment", FormMethod.Post))
                                        {
                                             @Html.AntiForgeryToken()
                                             <div class="form-group">
                                                  <label class="form-label" for="field-5">Speciality</label>
                                                  <span class="desc"></span>
                                                  <select class="form-control" name="Speciality" onchange="this.form.submit()">
                                                       <option></option>
                                                       @foreach (var speciality in Enum.GetValues(typeof(ProjectTW.Domain.Enums.DoctorSpeciality)))
                                                       {
                                                            <option>@speciality</option>
                                                       }
                                                  </select>
                                             </div>
                                        }

                                        <div class="form-group">
                                             <label class="form-label" for="field-5">Doctor</label>
                                             <span class="desc"></span>
                                             <select class="form-control">
                                                  <option></option>
                                                  @if (Model.DoctorList != null)
                                                  {
                                                       foreach (var doctor in Model.DoctorList)
                                                       {
                                                            <option>@doctor.FullName</option>
                                                       }
                                                  }
                                             </select>
                                        </div>
                                        <div class="form-group">
                                             <label class="form-label" for="field-5">Select date</label>
                                             <span class="desc">e.g. "04/03/2015"</span>
                                             <div class="controls">
                                                  <input type="text" class="form-control datepicker" data-format="mm/dd/yyyy" value="">
                                             </div>
                                        </div>
                                        <div class="form-group">
                                             <label class="form-label" for="field-5">Select time</label>
                                             <span class="desc"></span>
                                             <select class="form-control">
                                                  <option></option>
                                                  <option>Male</option>
                                                  <option>Female</option>
                                             </select>
                                        </div>
                                        <div class="form-group">
                                             <label class="form-label" for="field-5">Service</label>
                                             <span class="desc"></span>
                                             <select class="form-control ">
                                                  <option value=""></option>
                                                  <option value="Dental Care">Dental Care</option>
                                                  <option value="Aging Solutions">Aging Solutions</option>
                                                  <option value="Eye Care">Eye Care</option>
                                                  <option value="Physiotherapy">Physiotherapy</option>
                                             </select>
                                        </div>

                                        <div class="form-group">
                                             <label class="form-label" for="field-7">Date Time (AM/PM)</label>
                                             <span class="desc">e.g. "31/12/2015 12:12 PM"</span>
                                             <div class="controls">
                                                  <input type="text" class="form-control" id="field-7" data-mask="datetime12">
                                             </div>
                                        </div>

                                        <div class="form-group">
                                             <label class="form-label" for="field-1">Email</label>
                                             <span class="desc"></span>
                                             <div class="controls">
                                                  <input type="text" class="form-control" id="field-3">
                                             </div>
                                        </div>
                                        <div class="form-group">
                                             <label class="form-label" for="field-2">Phone</label>
                                             <span class="desc">e.g. "(534) 253-5353"</span>
                                             <div class="controls">
                                                  <input type="text" class="form-control" id="field-2" data-mask="phone" placeholder="(999) 999-9999">
                                             </div>
                                        </div>
                                        <div class="form-group">
                                             <label class="form-label" for="field-6">Brief</label>
                                             <span class="desc">e.g. "Enter any size of text description here"</span>
                                             <div class="controls">
                                                  <textarea class="form-control autogrow" cols="5" id="field-6"></textarea>
                                             </div>
                                        </div>
                                   </div>


                                   <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                        <div class="text-left">
                                             <button type="button" class="btn btn-primary">Save</button>
                                             <button type="button" class="btn">Cancel</button>
                                        </div>
                                   </div>
                              </form>
                         </div>


                    </div>
               </section>
          </div>


          <!-- MAIN CONTENT AREA ENDS -->
     </section>
</section>
<!-- END CONTENT -->