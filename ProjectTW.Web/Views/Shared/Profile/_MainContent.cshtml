@using System.Web.Optimization;
@model ProjectTW.Web.Models.GlobalData
<section class="wrapper main-wrapper row" style=''>

    <div class='col-12'>
        <div class="page-title">

            <div class="float-left">
                <!-- PAGE HEADING TAG - START --><h1 class="title">Profile</h1><!-- PAGE HEADING TAG - END -->
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <!-- MAIN CONTENT AREA STARTS -->


    <div class="col-xl-12">
        <section class="box nobox ">
            <div class="content-body">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-12">
                        <div class="uprofile-image">
                            @if (Model != null && Model.ProfileImagePath != null)
                            {
                                <img alt="" src="@Model.ProfileImagePath.Substring(1)" class="img-fluid">
                            }
                            else
                            {
                                <img alt="" src="~/ProfileImages/Default_ProfileImage.png" class="img-fluid">
                            }
                        </div>
                        <div class="uprofile-name">
                            <h3>
                                <a href="#">@Html.DisplayFor(u => u.FullName)</a>
                                <!-- Available statuses: online, idle, busy, away and offline -->
                                <span class="uprofile-status online"></span>
                            </h3>
                        </div>
                        <div class="uprofile-info">
                            <ul class="list-unstyled">
                                @if (Model.Level == ProjectTW.Domain.Enums.UserRole.Doctor)
                                {
                                    <li><i class='fa fa-user'></i> @Html.DisplayFor(u => u.Level): @Html.DisplayFor(u => u.Speciality)</li>
                                }
                                else
                                {
                                    <li><i class='fa fa-user'></i> @Html.DisplayFor(u => u.Level)</li>
                                }
                            </ul>
                        </div>
                        <div class="uprofile-buttons">
                            <a href="@Url.Action("Index", "Settings")" class="btn btn-md btn-primary"><i class="fa fa-wrench"></i> Settings</a>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-8 col-12">

                        <div class="uprofile-content">

                            <div class="">

                                <h4>Biography:</h4>
                                <p>@Html.DisplayFor(u => u.Biography)</p>
                                <div class="clearfix"></div>
                                <hr>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <!-- MAIN CONTENT AREA ENDS -->
</section>