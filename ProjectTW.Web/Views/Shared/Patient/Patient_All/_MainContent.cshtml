<!-- START CONTENT -->
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

        <div class='col-12'>
            <div class="page-title">

                <div class="float-left">
                    <!-- PAGE HEADING TAG - START --><h1 class="title">All Patients</h1><!-- PAGE HEADING TAG - END -->
                </div>

                <div class="float-right d-none">
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="hos-patients.html">Patients</a>
                        </li>
                        <li class="active">
                            <strong>All Patients</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->

        <div class="col-xl-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title float-left">All Patients</h2>
                    <div class="actions panel_actions float-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-12">

                            <div class="row">
                                @if (Model != null)
                                {
                                    foreach (var patient in @Model.PatientList)
                                    {
                                        <div class="col-md-6 col-lg-4 col-xl-3">
                                            <div class="team-member ">
                                                <div class="team-img">
                                                    @if (@patient.ProfileImagePath != null)
                                                    {
                                                        <img class="img-fluid" src="@patient.ProfileImagePath.Substring(1)" alt="">
                                                    }
                                                    else
                                                    {
                                                        <img class="img-fluid" src="~/ProfileImages/Default_ProfileImageSquare.png" alt="">
                                                    }

                                                </div>
                                                <div class="team-info">
                                                    <h4><a href="hos-patient-profile.html">@patient.FullName</a></h4>
                                                    <span class='team-member-edit'><a href="hos-patient-edit.html"></a></span>
                                                    <p>@(patient.Biography.Length > 100 ? patient.Biography.Substring(0, 100) + "..." : patient.Biography)</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>


        <!-- MAIN CONTENT AREA ENDS -->
    </section>
</section>