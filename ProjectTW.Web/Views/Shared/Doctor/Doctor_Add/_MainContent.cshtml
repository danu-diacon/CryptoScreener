@using System.Web.Optimization
@model ProjectTW.Web.Models.GlobalData

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

        <div class='col-12'>
            <div class="page-title">

                <div class="float-left">
                    <!-- PAGE HEADING TAG - START --><h1 class="title">Add a Doctor</h1><!-- PAGE HEADING TAG - END -->
                </div>

                <div class="float-right d-none">
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="hos-doctors.html">Doctors</a>
                        </li>
                        <li class="active">
                            <strong>Add Doctor</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->

        <div class="col-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title float-left">Basic Info</h2>
                </header>
                <div class="content-body">
                    <div class="row">
                        @using (Html.BeginForm("Index", "DoctorAdd", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-12 col-md-9 col-lg-8">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Full Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1" name="FullName">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="field-1">Email Address</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input class="form-control" type="email" id="emailaddress" required="" name="Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="field-1">Password</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input class="form-control" type="password" required="" id="password" name="Password">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="field-5">Speciality</label>
                                    <span class="desc"></span>
                                    <select class="form-control" name="Speciality">
                                        <option></option>
                                        @foreach (var speciality in Enum.GetValues(typeof(ProjectTW.Domain.Enums.DoctorSpeciality)))
                                        {
                                            <option>@speciality</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="field-6">Biography</label>
                                    <span class="desc">e.g. "Enter any size of text description here"</span>
                                    <div class="controls">
                                        <textarea class="form-control autogrow" cols="5" id="field-6" name="Biography"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="field-1">Profile Image</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="file" class="form-control" id="field-5" name="ProfileImage">
                                    </div>
                                </div>

                            </div>

                            <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                <div class="text-left">
                                    <button class="btn btn-primary" type="submit">Save</button>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </section>
        </div>
        <!-- MAIN CONTENT AREA ENDS -->
    </section>
</section>